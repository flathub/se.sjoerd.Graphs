{
    "id" : "se.sjoerd.Graphs",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "46",
    "sdk" : "org.gnome.Sdk",
    "command" : "graphs",
    "finish-args" : [
        "--share=ipc",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--device=dri"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        "build-aux/flatpak/blueprint-compiler.json",
        "build-aux/flatpak/python-dependencies.json",
        {
            "name" : "graphs",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/World/Graphs.git",                    
                    "commit" : "bf6adb09abf0390d6d3396e481876fe0f7e9f5f9",
                    "tag" : "v1.8.1"
                }
            ],
            "config-opts" : [
		"--buildtype=release"
            ]
        }
    ]
}

{
    "name": "python3-scipy",
    "buildsystem": "simple",
    "build-commands": [
        "pip3 install --no-index --find-links=\"file://${PWD}\" --prefix=${FLATPAK_DEST} scipy"
    ],
    "build-options": {
        "env": {
            "ATLAS": "None",
            "BLAS": "/app/lib",
            "LAPACK": "/app/lib",
            "LDFLAGS": "-shared",
            "FC": "/usr/lib/sdk/gfortran-62/bin/gfortran",
            "PATH": "/app/bin:/usr/bin:/usr/lib/sdk/gfortran-62/bin"
        }
    },
    "sources": [
